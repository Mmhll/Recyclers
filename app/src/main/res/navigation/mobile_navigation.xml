<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.grid_recycler.GridRecyclerFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_grid_recycler" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplication.ui.viewpager1.ViewPager1Fragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_viewpager1" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myapplication.ui.viewpager2.ViewPager2Fragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_viewpager2" />
    <fragment
        android:id="@+id/carouselFragment"
        android:name="com.example.myapplication.ui.carouselrecycler.CarouselFragment"
        android:label="CarouselFragment"
        tools:layout="@layout/fragment_carousel"/>
</navigation>